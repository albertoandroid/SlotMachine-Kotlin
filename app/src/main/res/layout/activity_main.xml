<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainActivityRl"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddesdecero.slotmachine.MainActivity">

    <TextView
        android:id="@+id/mainActivityTvGananciasAux"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganancias: " />

    <TextView
        android:id="@+id/mainActivityTvGanancias"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/mainActivityTvGananciasAux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mainActivityLl"
        android:layout_below="@+id/mainActivityTvGanancias"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/mainActivitySlot1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/mainActivitySlot2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/mainActivitySlot3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/mainActivityBtJugar"
        android:text="Jugar"
        android:layout_below="@+id/mainActivityLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
